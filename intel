<script>
/* =============================================================================
   CONFIG
   ============================================================================= */
/*
  Google Apps Script web app URL (you provided this).
  Make sure your Apps Script includes doPost (and preferably doGet)
  and that it's deployed as "Anyone, even anonymous".
*/
const GAS_ENDPOINT = "https://script.google.com/macros/s/AKfycbyQHlBCdVWWZg8nfO4Z8lIa1AIVY6S3HJzNDLayomOArG1ci2UF083mkIxEw-dmN2bmsA/exec";

/* =============================================================================
   HELPERS: toast
   ============================================================================= */
function showToast(msg, isError=false, timeout=4200){
  const t = document.getElementById('toast');
  if(!t) return;
  t.style.display = "block";
  t.style.background = isError ? "#2b0f0f" : "#0e0e0e";
  t.style.borderColor = isError ? "rgba(255,80,80,.16)" : "var(--ring)";
  t.innerText = msg;
  clearTimeout(t._hide);
  t._hide = setTimeout(()=>{ t.style.display="none"; }, timeout);
}

/* =============================================================================
   MOBILE SHEET NAV
   ============================================================================= */
const sheet = document.getElementById('sheet');
const btn = document.getElementById('menuBtn');
if(btn){ btn.addEventListener('click', ()=> sheet.classList.toggle('open')); }
sheet?.addEventListener('click', e=>{ if(e.target.tagName==='A') sheet.classList.remove('open')});

/* =============================================================================
   SMOOTH SCROLL LINKS
   ============================================================================= */
document.querySelectorAll('a[href^="#"]').forEach(a=>{
  a.addEventListener('click', e=>{
    const id=a.getAttribute('href');
    if(id && id.length>1){
      e.preventDefault();
      document.querySelector(id)?.scrollIntoView({behavior:'smooth'});
    }
  });
});

/* =============================================================================
   REVEAL ON SCROLL
   ============================================================================= */
const io=new IntersectionObserver((ents)=>{ ents.forEach(e=>{ if(e.isIntersecting){ e.target.classList.add('on'); io.unobserve(e.target);} })},{threshold:.12});
document.querySelectorAll('.reveal').forEach(el=>io.observe(el));

/* =============================================================================
   STATS COUNTERS
   ============================================================================= */
function animateCount(el){
  const end=+el.dataset.count||0; let cur=0; const step=Math.max(1,Math.ceil(end/60));
  const t=setInterval(()=>{ cur+=step; if(cur>=end){cur=end; clearInterval(t)} el.textContent=cur },16);
}
document.querySelectorAll('.stat .num').forEach(el=>{
  const sIO=new IntersectionObserver(es=>{ es.forEach(e=>{ if(e.isIntersecting){ animateCount(el); sIO.disconnect(); }})});
  sIO.observe(el);
});

/* =============================================================================
   VIDEO SHIMMER → show skeleton until loaded, then show video
   ============================================================================= */
document.querySelectorAll(".vcard").forEach(card=>{
  const v=card.querySelector("video");
  const sk=card.querySelector(".v-skeleton");
  if(!v) return;
  const ready = () => {
    if(sk) sk.style.display="none";
    v.style.opacity="1";
    try{ v.playbackRate=1.5 }catch(e){}
    v.muted=true; v.loop=true; v.playsInline=true;
    // don't force-play on mobile; play when interacted or visible
    v.play().catch(()=>{ /* ignore gesture errors */ });
  };
  if(v.readyState>=2){ ready(); } else { v.addEventListener("loadeddata", ready, {once:true}); }
});

/* =============================================================================
   PORTFOLIO HOVER PREVIEW (play on hover, pause/reset on leave)
   ============================================================================= */
document.querySelectorAll(".vcard video").forEach(video=>{
  // For desktops: play on mouseenter
  video.addEventListener("mouseenter", ()=> {
    try{ video.play(); }catch(e){}
  });
  video.addEventListener("mouseleave", ()=> {
    try{ video.pause(); video.currentTime = 0; }catch(e){}
  });
  // For touch devices: tap toggles playback
  video.addEventListener("click", ()=> {
    if(video.paused){ video.play(); } else { video.pause(); video.currentTime = 0; }
  });
});

/* =============================================================================
   CONTACT FORM: send to Google Apps Script AND open mailto with autofill
   - Process:
     1) POST to GAS_ENDPOINT with JSON
     2) If JSON fails, fallback to form-encoded POST
     3) Always open mail client with prefilled message
   ============================================================================= */
const form = document.getElementById('contactForm');
const submitBtn = document.getElementById('submitBtn');
const btnLoader = document.getElementById('btnLoader');

async function postToGAS(data){
  // Try JSON first and accept text responses too (GAS sometimes replies plain text)
  try{
    const resp = await fetch(GAS_ENDPOINT, {
      method: 'POST',
      mode: 'cors',
      headers: {'Content-Type':'application/json'},
      body: JSON.stringify(data)
    });
    if(!resp.ok){
      const text = await resp.text().catch(()=>"");
      throw new Error('GAS POST failed: ' + (text || resp.status));
    }
    // Try parse JSON, but if not JSON return text
    const t = await resp.text();
    try{ return JSON.parse(t); } catch(e){ return {ok:true, text:t}; }
  }catch(err){
    // Try fallback as form-encoded (some GAS set up to accept x-www-form-urlencoded)
    try{
      const formBody = Object.keys(data).map(k=>encodeURIComponent(k)+"="+encodeURIComponent(data[k])).join("&");
      const resp2 = await fetch(GAS_ENDPOINT, {
        method:'POST',
        mode:'cors',
        headers:{'Content-Type':'application/x-www-form-urlencoded;charset=UTF-8'},
        body: formBody
      });
      if(!resp2.ok){
        const txt = await resp2.text().catch(()=>"");
        throw new Error('Fallback POST failed: ' + (txt || resp2.status));
      }
      const t2 = await resp2.text().catch(()=>"");
      try{ return JSON.parse(t2); }catch(e){ return {ok:true, text:t2}; }
    }catch(err2){
      throw err2;
    }
  }
}

function openMailClient(data){
  // Build mailto with subject and body including phone + instagram
  const to = "yashwanthkumar7842@gmail.com";
  const subject = encodeURIComponent("New Project Inquiry — " + (data.name || ""));
  const bodyLines = [
    "Name: " + (data.name || ""),
    "Email: " + (data.email || ""),
    "Phone: " + (data.phone || ""),
    "Instagram: " + (data.instagram || ""),
    "",
    "Message:",
    (data.message || "")
  ];
  const body = encodeURIComponent(bodyLines.join("\n"));
  // open mail client in new window so browser doesn't block where possible
  window.location.href = `mailto:${to}?subject=${subject}&body=${body}`;
}

let currentSubmitting = false;

async function handleSubmit(e){
  e.preventDefault();
  if(currentSubmitting) return;
  currentSubmitting = true;
  submitBtn.disabled = true;
  if(btnLoader){ btnLoader.style.display = "inline-block"; btnLoader.classList.add('loading'); }

  const data = {
    timestamp: new Date().toISOString(),
    name: document.getElementById('name').value.trim(),
    email: document.getElementById('email').value.trim(),
    phone: document.getElementById('phone').value.trim(),
    instagram: document.getElementById('instagram').value.trim() || '@yash.namala',
    message: document.getElementById('message').value.trim(),
    source: window.location.href
  };

  // Basic validation
  if(!data.name || !data.email || !data.message){
    showToast("Please fill name, email and message.", true);
    currentSubmitting = false;
    submitBtn.disabled = false;
    if(btnLoader){ btnLoader.style.display = "none"; btnLoader.classList.remove('loading'); }
    return;
  }

  // 1) POST to Google Apps Script
  try{
    const result = await postToGAS(data);
    // If result indicates success, show positive toast; many GAS setups reply with plain text "Success"
    if(result && (result.status === "success" || result.ok || (typeof result === "object" && result.text && result.text.toLowerCase().includes("success")))){
      showToast("Saved to sheet ✅. Opening mail client…");
    } else {
      // When GAS reply is ambiguous, still treat as success but show server text
      showToast("Saved to sheet (server returned a response). Opening mail client…");
    }
  }catch(err){
    console.error("GAS save error:", err);
    // Show non-blocking error toast, proceed to open mail client
    showToast("Could not save to sheet (network/CORS). Still opening mail client.", true);
  }

  // 2) Open mail client (pre-filled email with phone & insta)
  try{
    openMailClient(data);
  }catch(err){
    console.error("mailto open failed", err);
    showToast("Could not open mail client automatically. Please email: yashwanthkumar7842@gmail.com", true);
  }

  // Reset UI after short delay (not clearing form so user can keep copy)
  setTimeout(()=>{
    currentSubmitting = false;
    submitBtn.disabled = false;
    if(btnLoader){ btnLoader.style.display = "none"; btnLoader.classList.remove('loading'); }
  }, 900);
}

/* =============================================================================
   BACKGROUND PARTICLES (subtle green dots)
   - Respects reduce-motion (draws static frame only)
   - Loops on RAF, throttled for performance
   ============================================================================= */
(function(){
  const canvas = document.getElementById('particles');
  if(!canvas) return;
  const ctx = canvas.getContext('2d', { alpha: true });
  let w, h, dpr, particles=[], raf, reduce = window.matchMedia('(prefers-reduced-motion: reduce)').matches;

  function resize(){
    dpr = Math.max(1, Math.min(2, window.devicePixelRatio || 1));
    w = canvas.width = Math.floor(innerWidth * dpr);
    h = canvas.height = Math.floor(innerHeight * dpr);
    canvas.style.width = innerWidth + 'px';
    canvas.style.height = innerHeight + 'px';
    init();
    if(reduce){ draw(); }
  }

  function init(){
    const count = Math.round((innerWidth * innerHeight) / 18000); // density
    particles = new Array(count).fill(0).map(() => ({
      x: Math.random()*w,
      y: Math.random()*h,
      vx: (Math.random()-.5)*0.12*dpr,
      vy: (Math.random()-.5)*0.12*dpr,
      r: (Math.random()*1.6+0.6)*dpr,
      a: Math.random()*0.45 + 0.15
    }));
  }

  function step(){
    for(const p of particles){
      p.x += p.vx; p.y += p.vy;
      if(p.x<-20 || p.x>w+20) p.vx*=-1;
      if(p.y<-20 || p.y>h+20) p.vy*=-1;
    }
  }

  function draw(){
    ctx.clearRect(0,0,w,h);
    // dots
    for(const p of particles){
      ctx.beginPath();
      ctx.fillStyle = `rgba(34,197,94,${p.a})`;
      ctx.arc(p.x, p.y, p.r, 0, Math.PI*2);
      ctx.fill();
    }
    // faint connections
    for(let i=0;i<particles.length;i++){
      for(let j=i+1;j<particles.length;j++){
        const a=particles[i], b=particles[j];
        const dx=a.x-b.x, dy=a.y-b.y; const dist=dx*dx+dy*dy;
        if(dist < (80*dpr)*(80*dpr)){
          const op = 0.06 * (1 - dist/((80*dpr)*(80*dpr)));
          ctx.strokeStyle = `rgba(34,197,94,${op})`;
          ctx.lineWidth = 0.6*dpr;
          ctx.beginPath(); ctx.moveTo(a.x, a.y); ctx.lineTo(b.x, b.y); ctx.stroke();
        }
      }
    }
  }

  function loop(){
    step(); draw(); raf = requestAnimationFrame(loop);
  }

  window.addEventListener('resize', resize, { passive:true });
  resize();
  if(!reduce){ loop(); }
})();

/* =============================================================================
   Accessibility: close mobile sheet with escape
   ============================================================================= */
window.addEventListener('keydown', (e)=>{
  if(e.key === 'Escape') sheet?.classList.remove('open');
});
</script>
</body>
</html>
